<odoo>
    <!-- Travel Wizard Form View -->
    <record id="view_travel_wizard_form" model="ir.ui.view">
        <field name="name">travel.wizard.form</field>
        <field name="model">travel.wizard</field>
        <field name="arch" type="xml">
            <form>
                <!--      style="background-color: Navy; color: #f8f9fa; font-weight: bold; text-align: center; padding: 20px; border-radius: 10px;">-->
                <h2 style="color: #2E86C1; text-align: center; font-weight: bold;">
                    Customer Registration Form
                </h2>
                <group>
                    <group>
                        <field name="employe_id" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="phone" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="email" style="border: 1px solid #ccc; padding: 5px;"/>
                        <!--                        <field name="passport_id" style="border: 1px solid #ccc; padding: 5px;"/>-->
                    </group>
                    <group string="From">
                        <field name="country_id" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="state_id" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="city_id" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="request_date" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="duration_date" style="border: 1px solid #ccc; padding: 5px;"/>
                    </group>
                    <group string="To">
                        <field name="country_ids" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="state_ids" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="city_ids" style="border: 1px solid #ccc; padding: 5px;"/>
                    </group>
                    <group>
                        <!--                        <field name="no_of_travel" style="border: 1px solid #ccc; padding: 5px;"/>-->
                        <field name="num_days" style="border: 1px solid #ccc; padding: 5px;"/>
                        <field name="no_of_travellers" />

                    </group>
                </group>
                <!-- Footer section (optional) -->
                <footer>
                    <button string="SendRequest" type="object" name="travelwizard"
                            class="oe_highlight"
                            style="background-color: #28A745; color: white; font-weight: bold; padding: 5px 10px; border-radius: 5px;"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"
                            style="background-color: #DC3545; color: white; font-weight: bold; padding: 5px 10px; border-radius: 5px;"/>
                </footer>
                <notebook>
                    <page string="Travelers Information">
                        <field name="traveller_ids">
                            <tree>
                                <field name="name"/>
                                <field name="gender"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <!-- Travel Wizard Action -->
    <record id="action_travel_wizard" model="ir.actions.act_window">
        <field name="name">Customer Registration Page</field>
        <field name="res_model">travel.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_travel_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!-- Travel Wizard Menu -->
